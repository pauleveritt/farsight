{
  "manifest_version": 2,
  "name": "Farsight",
  "description": "Developer advocacy browser extension",
  "version": "1.0.0",
  "icons": {
    "64": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ]
}